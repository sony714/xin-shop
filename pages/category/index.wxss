page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_index {
  display: flex;
  height: calc(100vh - 90rpx);
}
.cates .cates_index .left_menu {
  flex: 2;
}
.cates .cates_index .left_menu .menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
}
.cates .cates_index .left_menu .active {
  color: var(--themeColor);
}
.cates .cates_index .right_content {
  flex: 5;
}
.cates .cates_index .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_index .right_content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10px;
}
.cates .cates_index .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_index .right_content .goods_group .goods_list navigator {
  width: 33.3%;
  text-align: center;
  padding: 0 10px;
}
